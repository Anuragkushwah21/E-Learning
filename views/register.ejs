<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Register</title>

    <!-- CSS Link -->
    <link rel="stylesheet" href="./style.css" />

    <!-- Bootstrap Link -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <!-- Register Here -->
    <section id="login" class="my-5">
      <div class="container">
        <div class="row">
          <!-- Column-1 -->
          <div class="col-lg-6">
            <img
              class="w-100"
              src="/image/pexels-william-fortunato-6140676.jpg"
              alt="College Students Image-2"
              height="100%"
            />
          </div>
          <!-- End Column-1 -->

          <!-- Column-2 -->
          <div class="col-lg-6 bglogin p-4">
            <form
              action="/userinsert"
              method="post"
              enctype="multipart/form-data"
              id="frm">
              <!-- logo -->
              <center>
                <img
                  class="mb-4 rounded-circle border"
                  src="/image/7725662.jpg"
                  alt="Sign Up Image"
                  width="20%"
                  height="20%"
                />
              </center>

              <!-- Heading (Register Here) -->
              <h1 class="mb-5 text-center">Register Here</h1>
              <% if(msg.length>0){%>
                <div class="alert alert-success"><%=msg%></div>
  
                <%}%>
                 <% if(error.length>0){%>
                <div class="alert alert-danger"><%=error%></div>
  
                <%}%>
              <!-- User Name -->
              <div class="row mb-4">
                <div
                  class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2"
                >
                  User Name
                </div>
                <div class="col-lg-10">
                  <input
                    name="name"
                    id="name"
                    class="form-control text-capitalize"
                    required
                    type="text"
                    placeholder="Enter your name"
                  />
                </div>
              </div>

              <!-- Email -->
              <div class="row mb-3">
                <div
                  class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2"
                >
                  Email
                </div>
                <div class="col-lg-10">
                  <input
                    name="email"
                    id="email"
                    class="form-control"
                    required
                    type="email"
                    placeholder="Enter Your Email"
                  />
                </div>
              </div>
              <!-- Password -->
              <div class="row mb-4">
                <div
                  class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2"
                >
                  Password
                </div>
                <div class="col-lg-10">
                  <input
                    name="password"
                    id="password"
                    class="form-control"
                    required
                    type="password"
                    placeholder="Enter Your Password"
                  />
                </div>
              </div>

              <!-- Confirm Password -->
              <div class="row mb-4">
                <div
                  class="col-lg-3 text-center bg-secondary rounded text-light fw-light my-auto p-2"
                >
                  Confirm Password
                </div>
                <div class="col-lg-9">
                  <input
                    name="confirmpassword"
                    class="form-control"
                    required
                    id="confirmpassword"
                    type="password"
                    placeholder="Enter Your Confirm Password"
                  />
                </div>
              </div>
              <div class="col-lg-9">
                <input type="file" name="image" id="img" />
              </div>

              <!-- Button (Login) -->
              <center>
                <button type="submit" class="btn btn-primary mb-5 btn-lg">
                  Register
                </button>
              </center>
            </form>
          </div>
          <!-- End Column-2 -->
        </div>
      </div>
    </section>
    <!-- End Register Here -->

    <!-- Java Script Link -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>

    <!-- jquery -->
    <script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.21.0/jquery.validate.min.js"
    integrity="sha512-KFHXdr2oObHKI9w4Hv1XPKc898mE4kgYx58oqsc/JqqdLMDI4YjOLzom+EMlW8HFUd0QfjfAvxSL6sEq/a42fQ=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  ></script>
  <script
    src="https://code.jquery.com/jquery-3.7.1.min.js"
    integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
    crossorigin="anonymous"
  ></script>
  <script src="js/jQuery.js"></script>
</html>
