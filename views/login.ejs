<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Login</title>

    <!-- CSS Link -->
    <link rel="stylesheet" href="./style.css" />

    <!-- Bootstrap Link -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <!-- Login -->
    <section id="login" class="my-5">
      <div class="container">
        <div class="row">
          <!-- Column-1 -->
          <div class="col-lg-6">
            <img
              class="w-100"
              src="/image/pexels-william-fortunato-6140697.jpg"
              alt="College Students Image-1"
              height="100%"
            />
          </div>
          <!-- End Column-1 -->

          <!-- Column-2 -->
          <div class="col-lg-6 bglogin p-4">
            <form action="/vlogin" method="post">
              <!-- logo -->
              <center>
                <img
                  class="mb-4 rounded-circle border"
                  src="/image/7725662.jpg"
                  alt="logo"
                  width="20%"
                  height="20%"
                />
              </center>

              <!-- Heading (Login) -->
              <h1 class="mb-5 text-center">Login</h1>
              <% if(msg.length>0){%>
              <div class="alert alert-success"><%=msg%></div>

              <%}%> <% if(error.length>0){%>
              <div class="alert alert-danger"><%=error%></div>

              <%}%>

              <!-- Email -->
              <div class="row mb-3">
                <div
                  class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2"
                >
                  Email
                </div>
                <div class="col-lg-10">
                  <input
                    name="email"
                    class="form-control"
                    type="email"
                    placeholder="Enter Your Email"
                    required
                  />
                </div>
              </div>

              <!-- Password -->
              <div class="row mb-5">
                <div
                  class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2"
                >
                  Password
                </div>
                <div class="col-lg-10">
                  <input
                    name="password"
                    class="form-control"
                    type="password"
                    placeholder="Enter Your Password"
                    required
                  />
                </div>
              </div>

              <!-- Button (Login) -->
              <center>
                <button type="submit" class="btn btn-primary mb-5 btn-lg">
                  Login
                </button>
              </center>

              <!-- Register Now -->
              <center>
                <p class="text-uppercase fw-light">
                  Don't have an account? &nbsp;<a href="./register"
                    >Register Now</a
                  >
                </p>
              </center>
              <center>
                <p class="text-uppercase fw-light">
                  Did you forget your password? &nbsp;
                  <a
                    href="#"
                    data-bs-toggle="modal"
                    data-bs-target="#ForgotPassword"
                    >Forgot Password?</a
                  >
                </p>
              </center>
              <center>
                <p class="text-uppercase fw-light">
                  Login with google &nbsp;
                  <a
                    href="#"
                    >Login</a
                  >
                </p>
              </center>
            </form>
          </div>
          <!-- End Column-2 -->
        </div>
      </div>
    </section>
    <!-- End Login -->
    <!-- modal-forgot password -->
    <div
      class="modal fade"
      id="ForgotPassword"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Forgot Password</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true"></span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/ForgotPassword" method="post">
              <div class="form-group">
                <label for="Email">Email</label>
                <input
                  type="email"
                  name="email"
                  value=""
                  class="form-control"
                  id="email"
                  placeholder="Enter your email"
                  required
                />
              </div>

              <button type="submit" class="btn btn-success btn-block mt-5">
                Submit
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Java Script Link -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.21.0/jquery.validate.min.js"
    integrity="sha512-KFHXdr2oObHKI9w4Hv1XPKc898mE4kgYx58oqsc/JqqdLMDI4YjOLzom+EMlW8HFUd0QfjfAvxSL6sEq/a42fQ=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  ></script>
  <script
    src="https://code.jquery.com/jquery-3.7.1.min.js"
    integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
    crossorigin="anonymous"
  ></script>
  </body>
</html>
